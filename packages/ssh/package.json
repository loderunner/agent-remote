{
  "name": "@claude-remote/ssh",
  "version": "1.0.0",
  "description": "SSH remote tools for Claude AI agents",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "ssh-mcp-server": "./dist/server.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "RUN_E2E=true vitest run src/server.e2e.test.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "minimatch": "^10.0.3",
    "nanoid": "^5.1.6",
    "ssh2": "^1.17.0",
    "yargs": "^18.0.0",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.20.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.21",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/ssh2": "^1.15.5",
    "@types/yargs": "^17.0.33",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3"
  }
}

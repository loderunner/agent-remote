{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node10",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "example"],
  "exclude": ["node_modules", "dist", "sandbox"]
}

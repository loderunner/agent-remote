  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "SSH MCP Server",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "server",
        "--host",
        "localhost",
        "--port",
        "2222",
        "--username",
        "dev",
        "--private-key",
        "${workspaceFolder}/sandbox/ssh_key"
      ],
      "restart": true,
      "cwd": "${workspaceFolder}/packages/ssh",
      "console": "integratedTerminal"
    }
  ]
}

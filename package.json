{
  "name": "claude-remote",
  "version": "1.0.0",
  "description": "Remote execution tools for Claude AI agents",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "prettier --check . && eslint --max-warnings=0",
    "lint:fix": "prettier --write . && eslint --fix --max-warnings=0",
    "test": "pnpm -r test",

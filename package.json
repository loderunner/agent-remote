    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-extended": "^3.0.1",
    "eslint-plugin-jsdoc": "^61.0.0",
    "globals": "^16.4.0",
    "jest-extended": "^6.0.0",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"

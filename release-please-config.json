{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "packages": {
    "packages/core": {
      "release-type": "node",
      "package-name": "@agent-remote/core",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/ssh": {
      "release-type": "node",
      "package-name": "@agent-remote/ssh",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/docker": {
      "release-type": "node",
      "package-name": "@agent-remote/docker",
      "changelog-path": "CHANGELOG.md"
    }
  },
  "plugins": [
    {
      "type": "node-workspace"
    }
  ]
}
